{
  "CustomFilter": {
      "Migemo": {
          "Cmd": "migemogrep",
          "Args": ["$QUERY"]
      }
    },
  "Style": {
    "Basic": ["on_default", "default"],
    "Selected": ["underline", "white", "cyan"],
    "Query": ["white", "bold"]
  },
  "Keymap": {
    "C-f": "peco.ForwardChar",
    "C-b": "peco.BackwardChar",

    "M-f": "peco.ForwardWord",
    "M-b": "peco.BackwardWord",

    "M-ArrowRight": "peco.ForwardWord",
    "M-ArrowLeft":  "peco.BackwardWord",

    "C-a": "peco.BeginningOfLine",
    "C-e": "peco.EndOfLine",

    "C-d": "peco.DeleteForwardChar",
    "C-h": "peco.DeleteBackwardChar",

    "M-d": "peco.DeleteForwardWord",
    "M-h": "peco.DeleteBackwardWord",

    "C-k": "peco.KillEndOfLine",
    "C-l": "peco.DeleteAll",

    "M-v": "peco.SelectPreviousPage",
    "C-v": "peco.SelectNextPage",

    "ArrowLeft":  "peco.SelectPreviousPage",
    "ArrowRight": "peco.SelectNextPage",

    "C-p": "peco.SelectPrevious",
    "C-n": "peco.SelectNext",

    "ArrowUp":   "peco.SelectPrevious",
    "ArrowDown": "peco.SelectNext",

    "C-t": "peco.ToggleSelection",
    "C-s": "peco.ToggleSelectionAndSelectNext",

    "C-r": "peco.RotateMatcher",

    "C-m": "peco.Finish",
    "C-j": "peco.Finish",

    "C-g": "peco.Cancel",
    "Esc": "peco.Cancel",
    "C-c": "peco.Cancel"
  }
}
